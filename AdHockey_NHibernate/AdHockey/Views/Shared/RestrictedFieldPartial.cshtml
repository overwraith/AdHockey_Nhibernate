@using System;
@using System.Collections.Generic;
@using System.Configuration;

@using AdHockey.Models;
@using AdHockey.Repositories;

@model RestrictedField

@{
    ViewBag.Title = "Restricted Field";
}

@using (Html.BeginForm("AddRestrictedField", "ManageProfile", FormMethod.Post)) {
    <div class="form-group">
        <label class="control-label col-sm-6">Schema Name: </label>
        <div class="form-control-static col-sm-6">
            @Html.TextBoxFor(field => field.SchemaName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-6">Table Name: </label>
        <div class="form-control-static col-sm-6">
            @Html.TextBoxFor(field => field.TableName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-6">Column Name: </label>
        <div class="form-control-static col-sm-6">
            @Html.TextBoxFor(field => field.ColumnName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-6">Description: </label>
        <div class="form-control-static col-sm-6">
            @Html.TextAreaFor(field => field.Description, new { @class = "form-control" })
        </div>
    </div>

    <button id="btnSubmit" type="submit" class="btn btn-primary" name="Command" value="AddRestrictedField">Submit</button>
}